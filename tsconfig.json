{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",               /* Ensure Node-style module resolution */
    "esModuleInterop": true,                  /* Ensure compatibility between CommonJS and ES Modules */
    "allowSyntheticDefaultImports": true,     /* Allows default imports even if a module doesn't have a default export */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "middleware/errorHandlers.js", "auth/passportConfig.js", "models/Order.js", "models/Product.js", "models/Quote.js", "models/User.js", "server.js"],                   /* Include all TypeScript files */
  "exclude": ["node_modules"]                 /* Exclude node_modules */
}
